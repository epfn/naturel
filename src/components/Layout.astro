---
import normalize from "../styles/normalize.css?url";
import swiper from "swiper/swiper-bundle.css?url";
import fancybox from "@fancyapps/ui/dist/fancybox/fancybox.css?url";
import accordion from "accordion-js/dist/accordion.css?url";
import choices from "choices.js/public/assets/styles/choices.min.css?url";
import tippy from "tippy.js/dist/tippy.css?url";
import datepicker from "air-datepicker/air-datepicker.css?url";
import Header from "./Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;

const version = String(Date.now()).substring(5);
---

<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- <link rel="stylesheet" href={swiper} /> -->
    <!-- <link rel="stylesheet" href={fancybox} /> -->
    <!-- <link rel="stylesheet" href={accordion} /> -->
    <link rel="stylesheet" href={choices} />
    <!-- <link rel="stylesheet" href={tippy} /> -->
    <!-- <link rel="stylesheet" href={datepicker} /> -->
    <link rel="stylesheet" href="/fonts/icomoon/style.css" />
    <link rel="stylesheet" href={normalize} />
  </head>
  <body>
    <Header />
    <slot />
    <script is:inline src=`/js/script.js?v=0.${version}` defer></script>
  </body>
</html>

<style is:global lang="scss">
  @font-face {
    font-family: "Gotham Pro Regular";
    src: url("../fonts/gothampro/gothampro.ttf") format("truetype");
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Gotham Pro Bold";
    src: url("../fonts/gothampro/gothampro_bold.ttf") format("truetype");
    font-style: bold;
    font-display: swap;
  }

  @font-face {
    font-family: "Gotham Pro Black";
    src: url("../fonts/gothampro/gothampro_black.ttf") format("truetype");
    font-style: black;
    font-display: swap;
  }

  @font-face {
    font-family: "Euroscript Pro";
    src: url("../fonts/euroscriptpro/euroscriptpro.ttf") format("truetype");
    font-style: normal;
    font-display: swap;
  }

  html {
    height: 100%;
    scroll-behavior: smooth;
    font-family: $gotam-regular;
  }

  body {
    min-height: 100%;
    display: flex;
    flex-direction: column;
  }
</style>
